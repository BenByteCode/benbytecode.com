---
import Layout from '../layouts/Layout.astro';
// Removed Header and Footer imports
import ProjectCard from '../components/ProjectCard.astro';

// 1. Import the JSON data. Astro handles this import automatically.
import projectsData from '../data/projects.json';

// Define the expected structure for TypeScript support
interface Project {
  title: string;
  description: string;
  technologies: string[];
  githubUrl: string;
  liveUrl: string;
}

// Type assertion for clarity
const projects: Project[] = projectsData as Project[];
---

<Layout title="Projects - BenByteCode">
  <!-- Removed the outermost div, Header, and Footer components -->
    
  <main class="flex-grow container mx-auto px-6 py-20">
    <h1 class="text-4xl font-bold text-center mb-12">
      <span class="text-code-blue">&lt;</span>
      <span class="text-gray-100">Projects</span>
      <span class="text-code-blue"> /&gt;</span>
    </h1>
    
    <!-- 2. Map over the imported projects data to render ProjectCard components -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <ProjectCard
          title={project.title}
          description={project.description}
          technologies={project.technologies}
          githubUrl={project.githubUrl}
          liveUrl={project.liveUrl}
        />
      ))}
    </div>
    
    <p class="text-center text-gray-500 mt-12 italic">
      I am currently developing several new projects. Check back soon for more updates!
    </p>
  </main>
</Layout>